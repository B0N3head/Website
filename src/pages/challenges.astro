<script>
  // ELEMENTS
  const searchInput    = document.getElementById('searchInput');
  const dropdownBtn    = document.getElementById('sortDropdownBtn');
  const dropdown       = document.getElementById('sortDropdown');
  const sortOptions    = dropdown.querySelectorAll('.sort-dropdown-item');
  const filterButtons  = document.querySelectorAll('.filter-btn');
  const tbody          = document.querySelector('.challenge-table tbody');
  const rows           = () => Array.from(tbody.querySelectorAll('tr'));

  // STATE
  let activeTopic      = 'All';
  const sortState      = {};  
  const difficultyOrder = { Beginner:1, Intermediate:2, Advanced:3 };

  // FILTER + SEARCH
  function filterRows() {
    const query = searchInput.value.trim().toLowerCase();
    rows().forEach(row => {
      const name  = row.cells[1].textContent.toLowerCase();
      const topic = row.dataset.topic;
      const showByText  = name.includes(query);
      const showByTopic = activeTopic === 'All' || topic === activeTopic;
      row.style.display = (showByText && showByTopic) ? '' : 'none';
    });
  }

  // SORTING
  function sortTable(idx, type, dir) {
    const sorted = rows().sort((a, b) => {
      let aVal = a.cells[idx].textContent.trim();
      let bVal = b.cells[idx].textContent.trim();

      if (type === 'number') {
        aVal = Number(aVal); bVal = Number(bVal);
        return dir==='asc' ? aVal - bVal : bVal - aVal;
      }
      if (type === 'difficulty') {
        return dir==='asc'
          ? difficultyOrder[aVal] - difficultyOrder[bVal]
          : difficultyOrder[bVal] - difficultyOrder[aVal];
      }
      // string fallback
      return dir==='asc'
        ? aVal.localeCompare(bVal)
        : bVal.localeCompare(aVal);
    });

    sorted.forEach(r => tbody.appendChild(r));
    filterRows();  // reapply filters after sorting
  }

  // WIRE UP SEARCH
  searchInput.addEventListener('input', filterRows);

  // WIRE UP TOPIC FILTER BUTTONS
  filterButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      document.querySelector('.filter-btn.active')?.classList.remove('active');
      btn.classList.add('active');
      activeTopic = btn.dataset.topic;
      filterRows();
    });
  });

  // DROPDOWN SHOW/HIDE
  dropdownBtn.addEventListener('click', e => {
    e.stopPropagation();
    dropdown.classList.toggle('show');
  });
  document.addEventListener('click', e => {
    if (!dropdown.contains(e.target) && e.target !== dropdownBtn) {
      dropdown.classList.remove('show');
    }
  });

  // WIRE UP SORT OPTIONS
  sortOptions.forEach(opt => {
    // stash base label for arrow reset
    opt.dataset.label = opt.textContent.trim();

    opt.addEventListener('click', () => {
      const idx  = Number(opt.dataset.index);
      const type = opt.dataset.type;
      const prev = sortState[idx];
      const dir  = prev === 'asc' ? 'desc' : 'asc';
      sortState[idx] = dir;

      // reset all labels, then add arrow
      sortOptions.forEach(o => o.textContent = o.dataset.label);
      opt.textContent = opt.dataset.label + (dir==='asc' ? ' â–²' : ' â–¼');

      sortTable(idx, type, dir);
      dropdown.classList.remove('show');
    });
  });

  // INITIAL DISPLAY
  filterRows();
</script>
