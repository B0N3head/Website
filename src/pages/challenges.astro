<script>
  const searchInput   = document.getElementById('searchInput');
  const filterButtons = document.querySelectorAll('.filter-btn');
  const tbodyRows     = () => document.querySelectorAll('.challenge-table tbody tr');

  // gather all topics except “All”
  const allTopics = Array.from(filterButtons)
    .map(b => b.dataset.topic)
    .filter(t => t !== 'All');

  // initialize: mark every button active
  filterButtons.forEach(b => b.classList.add('active'));

  // derive active topics for filtering
  function getActiveTopics() {
    const allBtn = document.querySelector('.filter-btn[data-topic="All"]');
    if (allBtn.classList.contains('active')) {
      return allTopics.slice();  // return a copy of allTopics
    }
    return Array.from(filterButtons)
      .filter(b => b.classList.contains('active'))
      .map(b => b.dataset.topic);
  }

  // show/hide rows
  function applyFilters() {
    const q      = searchInput.value.trim().toLowerCase();
    const active = getActiveTopics();

    tbodyRows().forEach(row => {
      const name  = row.cells[1].textContent.toLowerCase();
      const top   = row.dataset.topic;
      const okText  = name.includes(q);
      const okTopic = active.includes(top);
      row.style.display = (okText && okTopic) ? '' : 'none';
    });
  }

  // click handler
  function handleFilterClick(btn) {
    const topic  = btn.dataset.topic;
    const allBtn = document.querySelector('.filter-btn[data-topic="All"]');
    const specific = Array.from(filterButtons).filter(b => b.dataset.topic !== 'All');

    if (topic === 'All') {
      // toggle “All” on/off → mirror to every button
      const turnOn = !allBtn.classList.contains('active');
      filterButtons.forEach(b => b.classList.toggle('active', turnOn));
    } else {
      // toggle this one
      btn.classList.toggle('active');
      // ensure “All” is off
      allBtn.classList.remove('active');
    }

    // if *all* specific are now active, switch back to only “All”
    if (specific.every(b => b.classList.contains('active'))) {
      // Clear all .active classes first
      filterButtons.forEach(b => b.classList.remove('active'));
      // Then activate only the “All” button
      allBtn.classList.add('active');
    }

    applyFilters();
  }

  // wire up
  filterButtons.forEach(b =>
    b.addEventListener('click', () => handleFilterClick(b))
  );
  searchInput.addEventListener('input', applyFilters);

  // initial pass
  applyFilters();
</script>
