---
import "@/styles/stylesheets/global.css"
import "@/styles/stylesheets/ml_practice.css"
import Navigation from "@/components/Navigation.astro";
import Footer from "@/components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>QUT AI & ML Society</title>
  </head>

	<body class="dark background-non-curved-v2">
		<Navigation />

      <div class="hero-section">
        <img
          src="../src/styles/graphics/network.jpg"
          alt="Header background"
          class="hero-background"
        />
        <div class="hero-overlay"></div>
        <h1 class="hero-heading">Machine Learning Topics</h1>
      </div> 
      
			<main class="min-h-160 items-center p-12">

      <div style="display: flex; flex-direction: column; align-items: center; padding-bottom: 400px">
        <div class="difficulty-switch">
          <div class="difficulty-indicator"></div>

          <button class="difficulty-btn active" data-tab="beginner">
            Beginner
          </button>
          <button class="difficulty-btn" data-tab="intermediate">
            Intermediate
          </button>
          <button class="difficulty-btn" data-tab="advanced">
            Advanced
          </button>
        </div> 

        <div style="max-width: 70vw">

                 <main class="ml-main">
          <div class="ml-wrapper">

          <div id="beginner" class="difficulty-content active">
              <h1>Beginner</h1>

              <!-- Linear Regression -->
              <a href="/learn/ml_topics/linear-regression" class="ml-card">
                <img src="/src/styles/topics/linear_regression.png" alt="Linear Regression Icon" class="ml-card__image">
                <div class="ml-card__body">
                  <div class="ml-card__title">Linear Regression</div>
                  <div class="ml-card__description">Use past data to estimate future outcomes. From predicting house prices to analyzing market trends, this method helps you find patterns that matter.</div>
                </div>
                <div class="ml-card__arrow">→</div>
              </a>

              <!-- Logistic Regression -->
              <a href="/learn/ml_topics/logistic-regression" class="ml-card">
                <img src="/src/styles/topics/logistic-regression.jpg" alt="Logistic Regression Icon" class="ml-card__image">
                <div class="ml-card__body">
                  <div class="ml-card__title">Logistic Regression</div>
                  <div class="ml-card__description">
                    Learn how this powerful classification algorithm predicts binary outcomes using a sigmoid function. Logistic regression helps model probabilities and make decisions in areas like spam detection and medical diagnosis.
                  </div>
                </div>
                <div class="ml-card__arrow">→</div>
              </a>

              <!-- K-Nearest Neighbours -->
              <a href="/learn/ml_topics/k-nearest-neighbours" class="ml-card">
                <img src="/src/styles/topics/KNN.png" alt="KNN Icon" class="ml-card__image">
                <div class="ml-card__body">
                  <div class="ml-card__title">K-Nearest Neighbours</div>
                  <div class="ml-card__description">
                    Discover how KNN classifies data by comparing similarity. It looks at the closest examples and lets them vote on what new data should be — no training required. Great for recommendation systems and pattern recognition.
                  </div>
                </div>
                <div class="ml-card__arrow">→</div>
              </a>
            </div>


          <div id="intermediate" class="difficulty-content">
            <h1>Intermediate</h1>

            <!-- CNN -->
              <a href="/learn/ml_topics/convoluted-neural-networks" class="ml-card">
              <img src="/src/styles/topics/CNN.png" alt="CNN Icon" class="ml-card__image">
              <div class="ml-card__body">
                <div class="ml-card__title">Convolutional Neural Networks</div>
                <div class="ml-card__description">Recognize patterns in images and video by mimicking how the visual cortex works. CNNs power everything from facial recognition to medical imaging.</div>
              </div>
              <div class="ml-card__arrow">→</div>
            </a>

            <!-- Random Forest -->
              <a href="/learn/ml_topics/random-forest" class="ml-card">
              <img src="/src/styles/topics/random_forest.png" alt="Random Forest Icon" class="ml-card__image">
              <div class="ml-card__body">
                <div class="ml-card__title">Random Forests</div>
                <div class="ml-card__description">Build multiple decision trees and combine their results for better accuracy. Random Forests offer strong performance on complex data with minimal tuning.</div>
              </div>
              <div class="ml-card__arrow">→</div>
            </a>

             <!-- Clustering -->
              <a href="/learn/ml_topics/clustering" class="ml-card">
                <img src="/src/styles/topics/clustering.jpg" alt="Clustering Icon" class="ml-card__image">
                <div class="ml-card__body">
                  <div class="ml-card__title">Clustering</div>
                  <div class="ml-card__description">Reveal hidden groups in your data without any labels. Whether you're exploring behavior patterns or discovering naturally occurring clusters, clustering helps uncover structure and meaning.</div>
                </div>
                <div class="ml-card__arrow">→</div>
              </a>
              
          </div>


         <div id="advanced" class="difficulty-content">
            <h1>Advanced</h1>

            <!-- Reinforcement Learning -->
              <a href="/learn/ml_topics/reinforcement-learning" class="ml-card">
              <img src="/src/styles/topics/reinforcement_learning.jpg" alt="Reinforcement Learning Icon" class="ml-card__image">
              <div class="ml-card__body">
                <div class="ml-card__title">Reinforcement Learning</div>
                <div class="ml-card__description">
                  Train agents to make decisions by rewarding good actions and discouraging bad ones. This trial-and-error method powers everything from robotics to game AI.
                </div>
              </div>
              <div class="ml-card__arrow">→</div>
            </a>

            <!-- Transformers -->
              <a href="/learn/ml_topics/transformers" class="ml-card">
              <img src="/src/styles/topics/transformers.png" alt="Transformers Icon" class="ml-card__image">
              <div class="ml-card__body">
                <div class="ml-card__title">Transformers</div>
                <div class="ml-card__description">
                  Work with models that handle sequences like language and code more efficiently than ever. Transformers are the foundation of breakthroughs in natural language processing.
                </div>
              </div>
              <div class="ml-card__arrow">→</div>
            </a>
          </div>

          </div>
        </div>
      </div>
    </main>
    <Footer />
    </body>


    <script>
document.addEventListener('DOMContentLoaded', () => {
  const buttons   = document.querySelectorAll('.difficulty-btn');
  const indicator = document.querySelector('.difficulty-indicator');
  const contents  = document.querySelectorAll('.difficulty-content');
  const count     = buttons.length;
  const stepPct   = 100 / count;

  // Helper to size indicator on load & resize
  function sizeIndicator() {
    const isMobile = window.matchMedia('(max-width: 600px)').matches;
    if (isMobile) {
      indicator.style.width  = 'calc(100% - 10px)';
      indicator.style.height = `${stepPct}%`;
    } else {
      indicator.style.width  = `${stepPct}%`;
      indicator.style.height = 'calc(100% - 10px)';
    }
  }

  // Initial size + on window resize
  sizeIndicator();
  window.addEventListener('resize', sizeIndicator);

  buttons.forEach((btn, i) => {
    btn.addEventListener('click', () => {
      // 1) update active state
      buttons.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      // 2) move indicator
      const isMobile = window.matchMedia('(max-width: 600px)').matches;
      if (isMobile) {
        indicator.style.transform = `translateY(${i * 100}%)`;
      } else {
        indicator.style.transform = `translateX(${i * 100}%)`;
      }

      // 3) show matching content
      const target = btn.dataset.tab;
      contents.forEach(c =>
        c.classList.toggle('active', c.id === target)
      );
    });
  });
});
</script>

</html>
